<style>
  .graph {
    height: 100%;
    position: relative;
  }

  .graph__menu {
    display: none;
    position: absolute;
    z-index: 999;
  }

  .graph__menu--active {
    display: block;
  }
</style>

<Toolbar @saving={{showSpinner}}/>
<Graph
  class="graph"
  @vertices={{model.vertices}}
  @edges={{model.edges}}
  @onChange={{action "changeState"}}
/>
